<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@color/white</item>
        <item name="tabIndicatorHeight"> 2.5dp</item>
        <item name="elevation">2dp</item>
        <item name="tabIconTint">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

</resources>